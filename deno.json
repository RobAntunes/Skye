{
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-net src/server/index.ts",
    "build": "deno run --allow-all ./src/scripts/build.js"
  },
  "imports": {
    "@noble/hashes": "npm:@noble/hashes@^1.5.0",
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "esnext"],
    "strict": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"],
  "nodeModulesDir": "auto"
}
