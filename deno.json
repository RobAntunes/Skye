{
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-net src/server/server.ts"
  },
  "imports": {},
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "esnext", "deno.worker"],
    "strict": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": ["src/server/**/*.ts", "src/client/**/*.ts"]
}
